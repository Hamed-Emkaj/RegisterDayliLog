      
@model DayliLogs.Model.User
@{
  ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
  <div class="container body-content">
    <div class="container" style="margin-top: 40px; direction: rtl">
      <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <strong>ورود</strong>
            </div>
            <div class="panel-body">
              @using (Html.BeginForm("Signin", "User", FormMethod.Post))
                {
                <fieldset>
                  <div class="row">
                    <div class="center-block">
                      <img class="profile-img img-responsive" src="~/Images/photo.png" alt="">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-12 col-md-10  col-md-offset-1">
                      <div class="form-group" style="border-right: solid 1px #c3c3c3;">
                        <div id="divLoginName" class="input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                          @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-6 sr-only" })
                          @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "نام کاربری" })
                          @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                      </div>
                      <div class="form-group" style="border-right: solid 1px #c3c3c3;">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="glyphicon glyphicon-lock"></i>
                          </span>
                          @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-6 sr-only" })
                          @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "کلمه عبور" })
                          @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                      </div>
                      <div class="form-group">
                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="ورود">
                        <div class="centertext" style="margin-top: 8px"><span class="field-validation-valid" data-valmsg-for="ServerError" data-valmsg-replace="true"></span></div>
                      </div>
                    </div>
                  </div>
                </fieldset>
                }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
